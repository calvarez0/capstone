<Window x:Class="WPF_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0"
            Margin="0,10,0,0"
            VerticalAlignment="Top"
            Height="100" Width="75"
            Stretch="Uniform"
            Source="/Assets/Logo.png"/>
        
        <ListBox Grid.Column="0" SelectionMode="Single" SelectionChanged="sidebar_SelectionChanged" x:Name="sidebar" Margin="0,50,0,50"  BorderThickness="0">

            <local:NavButton Navlink="/NewFolder/Page1.xaml" Margin="3" Padding="6" Label="Connection"/>
            <local:NavButton Navlink="/NewFolder/Page2.xaml" Margin="3" Padding="6" Label="Control"/>
            <local:NavButton Navlink="/NewFolder/Page3.xaml" Margin="3" Padding="6" Label="Configuration/Calibration"/>





        </ListBox>

        <Frame Grid.Column="1" x:Name="navframe" NavigationUIVisibility="Hidden" Background="#e9ecef"/>

    </Grid>
</Window>