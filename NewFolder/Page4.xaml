<Page x:Class="WPF_GUI.NewFolder.Page4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WPF_GUI.NewFolder"
      xmlns:controls="clr-namespace:WPF_GUI"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="1100"
      Title="Network">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Page Header -->
            <TextBlock Text="Network Visualization"
                       Style="{StaticResource PageTitle}"/>
            <TextBlock Text="Monitor and troubleshoot multiple Modbus actuators on the network"
                       Style="{StaticResource PageDescription}"/>

            <!-- Network Controls -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Polling Configuration Card -->
                <Border Grid.Column="0" Style="{StaticResource Card}">
                    <StackPanel>
                        <Border BorderBrush="{StaticResource PrimaryRed}"
                                BorderThickness="0,0,0,2"
                                Padding="0,0,0,8"
                                Margin="0,0,0,20">
                            <TextBlock Text="Polling Configuration"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Number of Devices"
                                           Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="NumDevicesTextBox"
                                         Text="4"
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Polling Direction"
                                           Style="{StaticResource FormLabel}"/>
                                <ComboBox x:Name="PollingDirectionComboBox"
                                          SelectedIndex="0"
                                          Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="Forward"/>
                                    <ComboBoxItem Content="Backward"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Custom Address Sequence"
                                       Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="CustomSequenceTextBox"
                                     Text="1,2,3,4"
                                     Style="{StaticResource ModernTextBox}"/>
                            <TextBlock Text="Comma-separated device addresses"
                                       Style="{StaticResource HelpText}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Button x:Name="StartPollingButton"
                                    Content="â–¶  Start Polling"
                                    Style="{StaticResource PrimaryButton}"
                                    Margin="0,0,10,0"
                                    MinWidth="140"/>
                            <Button x:Name="StopPollingButton"
                                    Content="â–   Stop Polling"
                                    Style="{StaticResource SecondaryButton}"
                                    MinWidth="140"/>
                        </StackPanel>

                        <Border x:Name="PollingIndicator"
                                Visibility="Collapsed"
                                Background="#d1ecf1"
                                BorderBrush="{StaticResource InfoBlue}"
                                BorderThickness="4,0,0,0"
                                CornerRadius="6"
                                Padding="12">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="12" Height="12"
                                         Fill="{StaticResource InfoBlue}"
                                         Margin="0,0,10,0">
                                    <Ellipse.Effect>
                                        <DropShadowEffect Color="#3498db" BlurRadius="8" Opacity="0.6"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                <TextBlock Text="Polling active - updating every 2s"
                                           FontSize="13"
                                           Foreground="#0c5460"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Legend Card -->
                <Border Grid.Column="1" Style="{StaticResource Card}">
                    <StackPanel>
                        <Border BorderBrush="{StaticResource PrimaryRed}"
                                BorderThickness="0,0,0,2"
                                Padding="0,0,0,8"
                                Margin="0,0,0,20">
                            <TextBlock Text="Legend"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <StackPanel Margin="0,0,0,12">
                            <!-- Status Colors -->
                            <TextBlock Text="Status Colors:"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"
                                       Foreground="{StaticResource TextDark}"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Border Width="20" Height="20"
                                        Background="Green"
                                        BorderBrush="#2c3e50"
                                        BorderThickness="2"
                                        CornerRadius="3"
                                        Margin="0,0,10,0"/>
                                <TextBlock Text="Green - Active/OK"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Border Width="20" Height="20"
                                        Background="Yellow"
                                        BorderBrush="#2c3e50"
                                        BorderThickness="2"
                                        CornerRadius="3"
                                        Margin="0,0,10,0"/>
                                <TextBlock Text="Yellow - Moving/Warning"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Border Width="20" Height="20"
                                        Background="Red"
                                        BorderBrush="#2c3e50"
                                        BorderThickness="2"
                                        CornerRadius="3"
                                        Margin="0,0,10,0"/>
                                <TextBlock Text="Red - Alarm/Error"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Width="20" Height="20"
                                        Background="White"
                                        BorderBrush="#2c3e50"
                                        BorderThickness="2"
                                        CornerRadius="3"
                                        Margin="0,0,10,0"/>
                                <TextBlock Text="No Color - Inactive"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Device Types -->
                            <TextBlock Text="Device Types:"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"
                                       Foreground="{StaticResource TextDark}"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <Border Width="20" Height="20"
                                        Background="#ADD8E6"
                                        BorderBrush="#2c3e50"
                                        BorderThickness="2"
                                        CornerRadius="3"
                                        Margin="0,0,10,0"/>
                                <TextBlock Text="Light Blue - S/X"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <Border Width="20" Height="20"
                                        Background="Orange"
                                        BorderBrush="#2c3e50"
                                        BorderThickness="2"
                                        CornerRadius="3"
                                        Margin="0,0,10,0"/>
                                <TextBlock Text="Orange - Nova"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <Border Width="20" Height="20"
                                        Background="Purple"
                                        BorderBrush="#2c3e50"
                                        BorderThickness="2"
                                        CornerRadius="3"
                                        Margin="0,0,10,0"/>
                                <TextBlock Text="Purple - EH"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Network Visualization -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <Border BorderBrush="{StaticResource PrimaryRed}"
                            BorderThickness="0,0,0,2"
                            Padding="0,0,0,8"
                            Margin="0,0,0,20">
                        <TextBlock Text="Network Topology"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextDark}"/>
                    </Border>

                    <!-- Device List -->
                    <WrapPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <!-- Device 1 -->
                        <Border Background="#d4edda"
                                BorderBrush="{StaticResource SuccessGreen}"
                                BorderThickness="3"
                                CornerRadius="8"
                                Padding="15"
                                Margin="0,0,15,15"
                                Width="180"
                                Cursor="Hand">
                            <StackPanel>
                                <controls:BrayValveControl Position="45.2"
                                                          DeviceAddress="1"
                                                          DeviceType="S/X"
                                                          StatusColor="Green"
                                                          IsBlinking="False"
                                                          HorizontalAlignment="Center"
                                                          Margin="0,0,0,10"/>
                                <TextBlock Text="S7X-001"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource TextDark}"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Address: 1"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource TextGray}"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Position: 45.2%"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource SuccessGreen}"/>
                            </StackPanel>
                        </Border>

                        <!-- Device 2 -->
                        <Border Background="#d4edda"
                                BorderBrush="{StaticResource InfoBlue}"
                                BorderThickness="3"
                                CornerRadius="8"
                                Padding="15"
                                Margin="0,0,15,15"
                                Width="180"
                                Cursor="Hand">
                            <StackPanel>
                                <controls:BrayValveControl Position="78.5"
                                                          DeviceAddress="2"
                                                          DeviceType="S/X"
                                                          StatusColor="Yellow"
                                                          IsBlinking="True"
                                                          HorizontalAlignment="Center"
                                                          Margin="0,0,0,10"/>
                                <TextBlock Text="S7X-002"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource TextDark}"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Address: 2"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource TextGray}"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Position: 78.5%"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource InfoBlue}"/>
                            </StackPanel>
                        </Border>

                        <!-- Device 3 -->
                        <Border Background="#d4edda"
                                BorderBrush="#e67e22"
                                BorderThickness="3"
                                CornerRadius="8"
                                Padding="15"
                                Margin="0,0,15,15"
                                Width="180"
                                Cursor="Hand">
                            <StackPanel>
                                <controls:BrayValveControl Position="22.1"
                                                          DeviceAddress="3"
                                                          DeviceType="S/X"
                                                          StatusColor="Green"
                                                          IsBlinking="False"
                                                          HorizontalAlignment="Center"
                                                          Margin="0,0,0,10"/>
                                <TextBlock Text="S7X-003"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource TextDark}"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Address: 3"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource TextGray}"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Position: 22.1%"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           Foreground="#e67e22"/>
                            </StackPanel>
                        </Border>

                        <!-- Device 4 - Inactive -->
                        <Border Background="{StaticResource BackgroundGray}"
                                BorderBrush="#95a5a6"
                                BorderThickness="3"
                                CornerRadius="8"
                                Padding="15"
                                Margin="0,0,15,15"
                                Width="180"
                                Cursor="Hand">
                            <StackPanel>
                                <controls:BrayValveControl Position="0"
                                                          DeviceAddress="4"
                                                          DeviceType="S/X"
                                                          StatusColor="Transparent"
                                                          IsBlinking="False"
                                                          HorizontalAlignment="Center"
                                                          Margin="0,0,0,10"/>
                                <TextBlock Text="S7X-004"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource TextDark}"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Address: 4"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource TextGray}"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="No Response"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           Foreground="#e74c3c"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>

                    <!-- Network Info -->
                    <Border Background="{StaticResource BackgroundGray}"
                            CornerRadius="6"
                            Padding="15">
                        <StackPanel>
                            <TextBlock FontSize="13" Margin="0,0,0,5">
                                <Run Text="Protocol:" FontWeight="SemiBold" Foreground="{StaticResource TextDark}"/>
                                <Run Text="Modbus RTU - Reading Register 100 for Product Identifier" Foreground="#555555"/>
                            </TextBlock>
                            <TextBlock FontSize="13" Margin="0,0,0,5">
                                <Run Text="Active Devices:" FontWeight="SemiBold" Foreground="{StaticResource TextDark}"/>
                                <Run Text="3 / 4" Foreground="{StaticResource SuccessGreen}" FontWeight="SemiBold"/>
                            </TextBlock>
                            <TextBlock Text="ðŸ’¡ Click on any device icon to view its configuration"
                                       FontSize="13"
                                       Foreground="#555555"
                                       FontStyle="Italic"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
