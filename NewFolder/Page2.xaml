<Page x:Class="WPF_GUI.NewFolder.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_GUI.NewFolder"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <!-- Wrap the slider and its caption in a vertical stack so text sits underneath -->
            <StackPanel Orientation="Vertical" Margin="8" HorizontalAlignment="Center">
                <Slider x:Name="Slider1"
                 Minimum="0"
                 Maximum="100"
                 Width="200"
                 TickFrequency="1"
                 IsSnapToTickEnabled="True"
                 Margin="0,0,0,4"/>
                <!-- Static label showing current value -->
                <TextBlock Text="{Binding ElementName=Slider1, Path=Value, StringFormat=Valve Position: {0:F0}}"
                    HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="8" HorizontalAlignment="Center">
                <Slider x:Name="Slider2"
                     Minimum="0"
                     Maximum="100"
                     Width="200"
                     TickFrequency="1"
                     IsSnapToTickEnabled="True"
                     Margin="0,0,0,4"/> 
                <TextBlock Text="{Binding ElementName=Slider2, Path=Value, StringFormat=Valve Torque: {0:F0}}"
        HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button x:Name="OpenCommandButton"
             Content="Open Command"
             Margin="8"
             Padding="12,6"
             VerticalAlignment="Center"/>
            <Button x:Name="CloseCommandButton"
              Content="Close Command"
              Margin="8"
              Padding="12,6"
              VerticalAlignment="Center"/>
            <Button x:Name="StopCommandButton"
              Content="Stop Command"
              Margin="8"
              Padding="12,6"
              VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
