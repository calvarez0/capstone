<Page x:Class="WPF_GUI.NewFolder.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_GUI.NewFolder"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label Content="Computer Port Number Entry"
            VerticalAlignment="Center"
            Target="{Binding ElementName=PortNumberTextBox}"
            Margin="0,0,8,0"/>
            <TextBox x:Name="PortNumberTextBox"
              Width="120"
              VerticalAlignment="Center"
              ToolTip="Enter the computer port number"/>
           



            <Label Content="Comm Port Number"
                VerticalAlignment="Center"
                Target="{Binding ElementName=CommPortTextBox}"
                Margin="16,0,8,0"/>
            <TextBox x:Name="CommPortTextBox"
              Width="120"
              VerticalAlignment="Center"
              ToolTip="Enter the comm port number"/>
            
        </StackPanel>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal"
                    VerticalAlignment="Top"
                    Margin="0,8,0,0">
            <Label Content="Baud Rate" VerticalAlignment="Center" Margin="0,0,2,0"/>
            <ComboBox x:Name="MoreSettingsComboBox"
           Width="200"
           VerticalAlignment="Center"
           ToolTip="Select a setting">
                <ComboBoxItem Content="4800"/>
                <ComboBoxItem Content="9600"/>
                <ComboBoxItem Content="19200"/>
                <ComboBoxItem Content="38400"/>
                <ComboBoxItem Content="115200"/>
                
            </ComboBox>
            <Label Content="Parity Selection" VerticalAlignment="Center" Margin="0,0,2,0"/>
            <ComboBox x:Name="Parity_Selection"
                Width="200"
                VerticalAlignment="Center"
                ToolTip="Select a setting">
                <ComboBoxItem Content="None"/>
                <ComboBoxItem Content="Even"/>
                <ComboBoxItem Content="Odd"/>


            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="3" 
            Orientation="Horizontal"
            VerticalAlignment="Center"
            Margin="0,8,0,0">
            <Label Content="Stop Bits Selection" VerticalAlignment="Center" Margin="0,0,2,0"/>
            <ComboBox x:Name="Stop_Bits_Selection"
                   Width="200"
                   VerticalAlignment="Center"
                   ToolTip="Select a setting">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
            </ComboBox>
            <Label Content="Slave Modbus Address" VerticalAlignment="Center" Margin="0,0,2,0"/>
            <TextBox x:Name="Slave_Modbus_Address"
               Width="120"
               VerticalAlignment="Center"
               ToolTip="Enter the comm port number"/>
        </StackPanel>

        <StackPanel Grid.Row="5"
             Orientation="Horizontal"
             HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"

             Margin="0,8,0,8">
            <Button x:Name="OpenSelectedPortButton"
             Content="Open Selected Port"
             Margin="0,0,8,0"
             VerticalAlignment="Center"/>
            <Button x:Name="CloseSelectedPortButton"
             Content="Close Selected Port"
             VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
