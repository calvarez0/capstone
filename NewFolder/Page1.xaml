<Page x:Class="WPF_GUI.NewFolder.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WPF_GUI.NewFolder"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1100"
      Title="Connection">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Page Header -->
            <TextBlock Text="Connection Configuration"
                       Style="{StaticResource PageTitle}"/>
            <TextBlock Text="Configure serial port and Modbus settings to connect to actuator devices"
                       Style="{StaticResource PageDescription}"/>

            <!-- Main Grid for Cards -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Serial Port Settings Card -->
                <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource Card}">
                    <StackPanel>
                        <!-- Card Header -->
                        <Border BorderBrush="{StaticResource PrimaryRed}"
                                BorderThickness="0,0,0,2"
                                Padding="0,0,0,8"
                                Margin="0,0,0,20">
                            <TextBlock Text="Serial Port Settings"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <!-- COM Port Number -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="COM Port Number"
                                       Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="PortNumberTextBox"
                                     Text="1"
                                     Style="{StaticResource ModernTextBox}"/>
                            <TextBlock Text="Available ports: COM1, COM2, COM3..."
                                       Style="{StaticResource HelpText}"/>
                        </StackPanel>

                        <!-- Baud Rate -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Baud Rate"
                                       Style="{StaticResource FormLabel}"/>
                            <ComboBox x:Name="BaudRateComboBox"
                                      SelectedIndex="3"
                                      Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="1200"/>
                                <ComboBoxItem Content="2400"/>
                                <ComboBoxItem Content="4800"/>
                                <ComboBoxItem Content="9600 (Default)"/>
                                <ComboBoxItem Content="19200"/>
                                <ComboBoxItem Content="38400"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Parity -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Parity"
                                       Style="{StaticResource FormLabel}"/>
                            <ComboBox x:Name="ParityComboBox"
                                      SelectedIndex="0"
                                      Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="None (Default)"/>
                                <ComboBoxItem Content="Even"/>
                                <ComboBoxItem Content="Odd"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Stop Bits -->
                        <StackPanel>
                            <TextBlock Text="Stop Bits"
                                       Style="{StaticResource FormLabel}"/>
                            <ComboBox x:Name="StopBitsComboBox"
                                      SelectedIndex="0"
                                      Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="1 (Default)"/>
                                <ComboBoxItem Content="2"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Simulation Settings Card (new) -->
                <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource Card}">
                    <StackPanel>
                        <!-- Card Header -->
                        <Border BorderBrush="{StaticResource PrimaryRed}"
                                BorderThickness="0,0,0,2"
                                Padding="0,0,0,8"
                                Margin="0,0,0,20">
                            <TextBlock Text="Simulation Settings"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <!-- Product Type -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Product Type"
                                       Style="{StaticResource FormLabel}"/>
                            <ComboBox x:Name="ProductTypeComboBox"
                                      SelectedIndex="0"
                                      Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="S7X (0x8000)" Tag="32768"/>
                                <ComboBoxItem Content="EHO (0x8001)" Tag="32769"/>
                                <ComboBoxItem Content="Nova (0x8002)" Tag="32770"/>
                            </ComboBox>
                            <TextBlock Text="Different products have different available registers"
                                       Style="{StaticResource HelpText}"/>
                        </StackPanel>

                        <!-- Starting Slave ID -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Starting Slave ID"
                                       Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="StartingSlaveIdTextBox"
                                     Text="1"
                                     Style="{StaticResource ModernTextBox}"/>
                            <TextBlock Text="Valid range: 1-254"
                                       Style="{StaticResource HelpText}"/>
                        </StackPanel>

                        <!-- Number of Devices -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Number of Simulated Devices"
                                       Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="DeviceCountTextBox"
                                     Text="1"
                                     Style="{StaticResource ModernTextBox}"/>
                            <TextBlock Text="Create multiple simulated devices for network testing"
                                       Style="{StaticResource HelpText}"/>
                        </StackPanel>

                        <!-- Create Simulation Button -->
                        <Button x:Name="CreateSimulationButton"
                                Content="Create Simulated Devices"
                                Style="{StaticResource InfoButton}"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>

                <!-- Modbus Configuration Card -->
                <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource Card}">
                    <StackPanel>
                        <!-- Card Header -->
                        <Border BorderBrush="{StaticResource PrimaryRed}"
                                BorderThickness="0,0,0,2"
                                Padding="0,0,0,8"
                                Margin="0,0,0,20">
                            <TextBlock Text="Hardware Mode Settings"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <!-- Device Scan Range -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Scan Start ID"
                                           Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="ScanStartIdTextBox"
                                         Text="1"
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Scan End ID"
                                           Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="ScanEndIdTextBox"
                                         Text="10"
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Protocol Information -->
                        <Border Background="{StaticResource BackgroundGray}"
                                CornerRadius="6"
                                Padding="15"
                                Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="Protocol Information"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextDark}"
                                           Margin="0,0,0,10"/>

                                <!-- Protocol -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Protocol:"
                                               FontWeight="Medium"
                                               Foreground="#555555"/>
                                    <TextBlock Grid.Column="1"
                                               Text="Modbus RTU"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextDark}"/>
                                </Grid>

                                <!-- Interface -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Interface:"
                                               FontWeight="Medium"
                                               Foreground="#555555"/>
                                    <TextBlock Grid.Column="1"
                                               Text="RS485"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextDark}"/>
                                </Grid>

                                <!-- CRC Check -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="CRC Check:"
                                               FontWeight="Medium"
                                               Foreground="#555555"/>
                                    <TextBlock Grid.Column="1"
                                               Text="16-bit Enabled"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextDark}"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Device List Card -->
                <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource Card}">
                    <StackPanel>
                        <!-- Card Header -->
                        <Border BorderBrush="{StaticResource PrimaryRed}"
                                BorderThickness="0,0,0,2"
                                Padding="0,0,0,8"
                                Margin="0,0,0,20">
                            <TextBlock Text="Connected Devices"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <!-- Device List -->
                        <ListBox x:Name="DeviceListBox"
                                 MinHeight="120"
                                 MaxHeight="200"
                                 Margin="0,0,0,15"
                                 Background="White"
                                 BorderBrush="#ddd"
                                 BorderThickness="1">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <Ellipse Width="12" Height="12" Fill="{StaticResource SuccessGreen}" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding}" FontWeight="Medium"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <TextBlock x:Name="DeviceCountText"
                                   Text="No devices connected"
                                   Style="{StaticResource HelpText}"
                                   Margin="0,0,0,15"/>

                        <!-- Scan Button -->
                        <Button x:Name="ScanDevicesButton"
                                Content="Scan for Devices"
                                Style="{StaticResource SecondaryButton}"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal"
                        Margin="10,20,10,0"
                        HorizontalAlignment="Left">
                <Button x:Name="OpenPortButton"
                        Content="CONNECT"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,0,15,0"
                        MinWidth="150"/>
                <Button x:Name="ClosePortButton"
                        Content="DISCONNECT"
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,15,0"
                        MinWidth="150"/>
                <Button x:Name="ClearDevicesButton"
                        Content="CLEAR DEVICES"
                        Style="{StaticResource SecondaryButton}"
                        MinWidth="150"/>
            </StackPanel>

            <!-- Status Message -->
            <Border x:Name="StatusMessageBorder"
                    Visibility="Collapsed"
                    Background="#d4edda"
                    BorderBrush="{StaticResource SuccessGreen}"
                    BorderThickness="4,0,0,0"
                    CornerRadius="6"
                    Padding="15"
                    Margin="10,20,10,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="StatusIcon"
                               Text="&#x2713;"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource SuccessGreen}"
                               Margin="0,0,15,0"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="StatusMessageText"
                               Text="Connected successfully"
                               FontSize="13"
                               Foreground="#155724"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
