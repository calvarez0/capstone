<Page x:Class="WPF_GUI.NewFolder.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WPF_GUI.NewFolder"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Connection">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Page Header -->
            <TextBlock Text="Connection Configuration"
                       Style="{StaticResource PageTitle}"/>
            <TextBlock Text="Configure serial port and Modbus settings to connect to S7X actuator"
                       Style="{StaticResource PageDescription}"/>

            <!-- Main Grid for Cards -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Serial Port Settings Card -->
                <Border Grid.Column="0" Style="{StaticResource Card}">
                    <StackPanel>
                        <!-- Card Header -->
                        <Border BorderBrush="{StaticResource PrimaryRed}"
                                BorderThickness="0,0,0,2"
                                Padding="0,0,0,8"
                                Margin="0,0,0,20">
                            <TextBlock Text="Serial Port Settings"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <!-- COM Port Number -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="COM Port Number"
                                       Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="PortNumberTextBox"
                                     Text="1"
                                     Style="{StaticResource ModernTextBox}"/>
                            <TextBlock Text="Available ports: COM1, COM2, COM3..."
                                       Style="{StaticResource HelpText}"/>
                        </StackPanel>

                        <!-- Baud Rate -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Baud Rate"
                                       Style="{StaticResource FormLabel}"/>
                            <ComboBox x:Name="BaudRateComboBox"
                                      SelectedIndex="1"
                                      Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="4800"/>
                                <ComboBoxItem Content="9600 (Default)"/>
                                <ComboBoxItem Content="19200"/>
                                <ComboBoxItem Content="38400"/>
                                <ComboBoxItem Content="115200"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Parity -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Parity"
                                       Style="{StaticResource FormLabel}"/>
                            <ComboBox x:Name="ParityComboBox"
                                      SelectedIndex="0"
                                      Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="None (Default)"/>
                                <ComboBoxItem Content="Even"/>
                                <ComboBoxItem Content="Odd"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Stop Bits -->
                        <StackPanel>
                            <TextBlock Text="Stop Bits"
                                       Style="{StaticResource FormLabel}"/>
                            <ComboBox x:Name="StopBitsComboBox"
                                      SelectedIndex="0"
                                      Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="1 (Default)"/>
                                <ComboBoxItem Content="2"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Modbus Configuration Card -->
                <Border Grid.Column="1" Style="{StaticResource Card}">
                    <StackPanel>
                        <!-- Card Header -->
                        <Border BorderBrush="{StaticResource PrimaryRed}"
                                BorderThickness="0,0,0,2"
                                Padding="0,0,0,8"
                                Margin="0,0,0,20">
                            <TextBlock Text="Modbus Configuration"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <!-- Slave Modbus Address -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Slave Modbus Address"
                                       Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="ModbusAddressTextBox"
                                     Text="254"
                                     Style="{StaticResource ModernTextBox}"/>
                            <TextBlock Text="Valid range: 1-254 (Default: 254)"
                                       Style="{StaticResource HelpText}"/>
                        </StackPanel>

                        <!-- Protocol Information -->
                        <Border Background="{StaticResource BackgroundGray}"
                                CornerRadius="6"
                                Padding="15"
                                Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="Protocol Information"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextDark}"
                                           Margin="0,0,0,10"/>

                                <!-- Protocol -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Protocol:"
                                               FontWeight="Medium"
                                               Foreground="#555555"/>
                                    <TextBlock Grid.Column="1"
                                               Text="Modbus RTU"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextDark}"/>
                                </Grid>

                                <!-- Interface -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Interface:"
                                               FontWeight="Medium"
                                               Foreground="#555555"/>
                                    <TextBlock Grid.Column="1"
                                               Text="RS485"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextDark}"/>
                                </Grid>

                                <!-- CRC Check -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="CRC Check:"
                                               FontWeight="Medium"
                                               Foreground="#555555"/>
                                    <TextBlock Grid.Column="1"
                                               Text="16-bit Enabled"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextDark}"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal"
                        Margin="10,20,10,0"
                        HorizontalAlignment="Left">
                <Button x:Name="OpenPortButton"
                        Content="OPEN PORT"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,0,15,0"
                        MinWidth="150"/>
                <Button x:Name="ClosePortButton"
                        Content="CLOSE PORT"
                        Style="{StaticResource SecondaryButton}"
                        MinWidth="150"/>
            </StackPanel>

            <!-- Status Message (Placeholder - would be shown/hidden based on connection state) -->
            <Border x:Name="StatusMessageBorder"
                    Visibility="Collapsed"
                    Background="#d4edda"
                    BorderBrush="{StaticResource SuccessGreen}"
                    BorderThickness="4,0,0,0"
                    CornerRadius="6"
                    Padding="15"
                    Margin="10,20,10,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="✓"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource SuccessGreen}"
                               Margin="0,0,15,0"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="StatusMessageText"
                               Text="Connected to COM1 (9600 baud, None, 1 stop bit) - Modbus Address: 254"
                               FontSize="13"
                               Foreground="#155724"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
