<Page x:Class="WPF_GUI.NewFolder.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WPF_GUI.NewFolder"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="1100"
      Title="Configuration">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Page Header -->
            <TextBlock Text="Configuration &amp; Calibration"
                       Style="{StaticResource PageTitle}"/>
            <TextBlock Text="Configure actuator parameters and manage device settings"
                       Style="{StaticResource PageDescription}"/>

            <!-- Device Mode Status -->
            <Border Style="{StaticResource Card}"
                    Margin="10,0,10,20"
                    Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Device Mode:"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,15,0"
                                   VerticalAlignment="Center"/>
                        <Border Background="#95a5a6"
                                CornerRadius="6"
                                Padding="12,8">
                            <TextBlock x:Name="DeviceModeText"
                                       Text="STOP MODE"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="EnterSetupModeButton"
                                Content="Enter Setup Mode"
                                Style="{StaticResource InfoButton}"
                                Margin="0,0,10,0"
                                MinWidth="140"/>
                        <Button x:Name="ExitSetupModeButton"
                                Content="Exit Setup Mode"
                                Style="{StaticResource SecondaryButton}"
                                MinWidth="140"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Configuration Grid -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Basic Settings Card -->
                <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource Card}">
                    <StackPanel>
                        <Border BorderBrush="{StaticResource PrimaryRed}"
                                BorderThickness="0,0,0,2"
                                Padding="0,0,0,8"
                                Margin="0,0,0,20">
                            <TextBlock Text="Basic Settings"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Device Name"
                                       Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="DeviceNameTextBox"
                                     Text="S7X-001"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Modbus Address (Register 11)"
                                       Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="ModbusAddressConfigTextBox"
                                     Text="254"
                                     Style="{StaticResource ModernTextBox}"/>
                            <TextBlock Text="Valid range: 1-254"
                                       Style="{StaticResource HelpText}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Speed Setting (%)"
                                           Style="{StaticResource FormLabel}"/>
                                <TextBlock Grid.Column="1"
                                           x:Name="SpeedValueText"
                                           Text="50%"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryRed}"/>
                            </Grid>
                            <Slider x:Name="SpeedSlider"
                                    Minimum="0"
                                    Maximum="100"
                                    Value="50"
                                    TickFrequency="10"
                                    IsSnapToTickEnabled="True"
                                    Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Torque Limit (%)"
                                           Style="{StaticResource FormLabel}"/>
                                <TextBlock Grid.Column="1"
                                           x:Name="TorqueLimitValueText"
                                           Text="80%"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryRed}"/>
                            </Grid>
                            <Slider x:Name="TorqueLimitSlider"
                                    Minimum="0"
                                    Maximum="100"
                                    Value="80"
                                    TickFrequency="10"
                                    IsSnapToTickEnabled="True"
                                    Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Position & Calibration Card -->
                <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource Card}">
                    <StackPanel>
                        <Border BorderBrush="{StaticResource PrimaryRed}"
                                BorderThickness="0,0,0,2"
                                Padding="0,0,0,8"
                                Margin="0,0,0,20">
                            <TextBlock Text="Position &amp; Calibration"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Open Position (°)"
                                       Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="OpenPositionTextBox"
                                     Text="100"
                                     Style="{StaticResource ModernTextBox}"/>
                            <TextBlock Text="Calibrated open position"
                                       Style="{StaticResource HelpText}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Close Position (°)"
                                       Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="ClosePositionTextBox"
                                     Text="0"
                                     Style="{StaticResource ModernTextBox}"/>
                            <TextBlock Text="Calibrated close position"
                                       Style="{StaticResource HelpText}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Position Deadband (°)"
                                       Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="DeadbandTextBox"
                                     Text="2.0"
                                     Style="{StaticResource ModernTextBox}"/>
                            <TextBlock Text="Accuracy tolerance"
                                       Style="{StaticResource HelpText}"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Failsafe Mode"
                                       Style="{StaticResource FormLabel}"/>
                            <ComboBox x:Name="FailsafeModeComboBox"
                                      SelectedIndex="0"
                                      Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="Close on Power Loss"/>
                                <ComboBoxItem Content="Open on Power Loss"/>
                                <ComboBoxItem Content="Stay in Position"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Analog Output Card -->
                <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource Card}">
                    <StackPanel>
                        <Border BorderBrush="{StaticResource PrimaryRed}"
                                BorderThickness="0,0,0,2"
                                Padding="0,0,0,8"
                                Margin="0,0,0,20">
                            <TextBlock Text="Analog Output (4-20mA)"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Minimum Output (mA)"
                                       Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="AnalogMinTextBox"
                                     Text="4.0"
                                     Style="{StaticResource ModernTextBox}"/>
                            <TextBlock Text="Typically 4mA at closed position"
                                       Style="{StaticResource HelpText}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Maximum Output (mA)"
                                       Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="AnalogMaxTextBox"
                                     Text="20.0"
                                     Style="{StaticResource ModernTextBox}"/>
                            <TextBlock Text="Typically 20mA at open position"
                                       Style="{StaticResource HelpText}"/>
                        </StackPanel>

                        <Border Background="{StaticResource BackgroundGray}"
                                CornerRadius="6"
                                Padding="15">
                            <StackPanel>
                                <TextBlock Text="Calibration Note:"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextDark}"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="Ensure actuator reads correct analog values at fully open (20mA) and fully closed (4mA) positions to distinguish from inaccurate readings (3.8-3.9mA)."
                                           FontSize="12"
                                           Foreground="#555555"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Configuration Management Card -->
                <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource Card}">
                    <StackPanel>
                        <Border BorderBrush="{StaticResource PrimaryRed}"
                                BorderThickness="0,0,0,2"
                                Padding="0,0,0,8"
                                Margin="0,0,0,20">
                            <TextBlock Text="Configuration Management"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <TextBlock Text="Save configuration to file for backup or load previously saved settings for rapid device replacement."
                                   FontSize="13"
                                   Foreground="{StaticResource TextGray}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,20"/>

                        <StackPanel Margin="0,0,0,15">
                            <Button x:Name="SaveToFileButton"
                                    Content="💾  Save to PC"
                                    Style="{StaticResource InfoButton}"
                                    Margin="0,0,0,10"
                                    HorizontalAlignment="Stretch"/>
                            <Button x:Name="LoadFromFileButton"
                                    Content="📁  Load from PC"
                                    Style="{StaticResource InfoButton}"
                                    Margin="0,0,0,10"
                                    HorizontalAlignment="Stretch"/>
                            <Button x:Name="WriteToDeviceButton"
                                    Content="⚡  Write to Device"
                                    Style="{StaticResource PrimaryButton}"
                                    HorizontalAlignment="Stretch"/>
                        </StackPanel>

                        <Border Background="{StaticResource BackgroundGray}"
                                CornerRadius="6"
                                Padding="15">
                            <StackPanel>
                                <TextBlock Text="Modbus Registers:"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextDark}"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="• Register 11: Modbus Address"
                                           FontSize="12"
                                           Foreground="#555555"
                                           Margin="0,0,0,3"/>
                                <TextBlock Text="• Registers 101-111: Configuration Data"
                                           FontSize="12"
                                           Foreground="#555555"
                                           Margin="0,0,0,3"/>
                                <TextBlock Text="• Function Code 16: Preset Multiple Registers"
                                           FontSize="12"
                                           Foreground="#555555"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
