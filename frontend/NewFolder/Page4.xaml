<Page x:Class="WPF_GUI.NewFolder.Page4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WPF_GUI.NewFolder"
      xmlns:controls="clr-namespace:WPF_GUI"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="1100"
      Title="Network">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Page Header -->
            <TextBlock Text="Network Visualization"
                       Style="{StaticResource PageTitle}"/>
            <TextBlock Text="Monitor and control multiple Modbus actuators on the network"
                       Style="{StaticResource PageDescription}"/>

            <!-- Network Controls -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Polling Configuration Card -->
                <Border Grid.Column="0" Style="{StaticResource Card}">
                    <StackPanel>
                        <Border BorderBrush="{StaticResource PrimaryRed}"
                                BorderThickness="0,0,0,2"
                                Padding="0,0,0,8"
                                Margin="0,0,0,20">
                            <TextBlock Text="Polling Configuration"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Polling Interval (ms)"
                                           Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="PollingIntervalTextBox"
                                         Text="500"
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Mode"
                                           Style="{StaticResource FormLabel}"/>
                                <ComboBox x:Name="PollingModeComboBox"
                                          SelectedIndex="0"
                                          Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="All Devices"/>
                                    <ComboBoxItem Content="Selected Device Only"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Button x:Name="StartPollingButton"
                                    Content="Start Polling"
                                    Style="{StaticResource PrimaryButton}"
                                    Margin="0,0,10,0"
                                    MinWidth="140"/>
                            <Button x:Name="StopPollingButton"
                                    Content="Stop Polling"
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="0,0,10,0"
                                    MinWidth="140"/>
                            <Button x:Name="RefreshAllButton"
                                    Content="Refresh All"
                                    Style="{StaticResource InfoButton}"
                                    MinWidth="120"/>
                        </StackPanel>

                        <Border x:Name="PollingIndicator"
                                Visibility="Collapsed"
                                Background="#d1ecf1"
                                BorderBrush="{StaticResource InfoBlue}"
                                BorderThickness="4,0,0,0"
                                CornerRadius="6"
                                Padding="12">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse x:Name="PollingDot" Width="12" Height="12"
                                         Fill="{StaticResource InfoBlue}"
                                         Margin="0,0,10,0">
                                    <Ellipse.Effect>
                                        <DropShadowEffect Color="#3498db" BlurRadius="8" Opacity="0.6"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                <TextBlock x:Name="PollingStatusText" Text="Polling active"
                                           FontSize="13"
                                           Foreground="#0c5460"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Legend Card -->
                <Border Grid.Column="1" Style="{StaticResource Card}">
                    <StackPanel>
                        <Border BorderBrush="{StaticResource PrimaryRed}"
                                BorderThickness="0,0,0,2"
                                Padding="0,0,0,8"
                                Margin="0,0,0,20">
                            <TextBlock Text="Legend"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <StackPanel Margin="0,0,0,12">
                            <!-- Status Colors -->
                            <TextBlock Text="Status Colors:"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"
                                       Foreground="{StaticResource TextDark}"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Border Width="20" Height="20"
                                        Background="Green"
                                        BorderBrush="#2c3e50"
                                        BorderThickness="2"
                                        CornerRadius="3"
                                        Margin="0,0,10,0"/>
                                <TextBlock Text="Green - OK/Open"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Border Width="20" Height="20"
                                        Background="Yellow"
                                        BorderBrush="#2c3e50"
                                        BorderThickness="2"
                                        CornerRadius="3"
                                        Margin="0,0,10,0"/>
                                <TextBlock Text="Yellow - Moving"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Border Width="20" Height="20"
                                        Background="Red"
                                        BorderBrush="#2c3e50"
                                        BorderThickness="2"
                                        CornerRadius="3"
                                        Margin="0,0,10,0"/>
                                <TextBlock Text="Red - Alarm/Fault"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Width="20" Height="20"
                                        Background="#95a5a6"
                                        BorderBrush="#2c3e50"
                                        BorderThickness="2"
                                        CornerRadius="3"
                                        Margin="0,0,10,0"/>
                                <TextBlock Text="Gray - Closed/Stopped"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Product Types -->
                            <TextBlock Text="Product Types:"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"
                                       Foreground="{StaticResource TextDark}"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <Border Width="20" Height="20"
                                        Background="#ADD8E6"
                                        BorderBrush="#2c3e50"
                                        BorderThickness="2"
                                        CornerRadius="3"
                                        Margin="0,0,10,0"/>
                                <TextBlock Text="S7X (0x8000)"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <Border Width="20" Height="20"
                                        Background="Purple"
                                        BorderBrush="#2c3e50"
                                        BorderThickness="2"
                                        CornerRadius="3"
                                        Margin="0,0,10,0"/>
                                <TextBlock Text="EHO (0x8001)"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <Border Width="20" Height="20"
                                        Background="Orange"
                                        BorderBrush="#2c3e50"
                                        BorderThickness="2"
                                        CornerRadius="3"
                                        Margin="0,0,10,0"/>
                                <TextBlock Text="Nova (0x8002)"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Network Visualization -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <Border BorderBrush="{StaticResource PrimaryRed}"
                            BorderThickness="0,0,0,2"
                            Padding="0,0,0,8"
                            Margin="0,0,0,20">
                        <TextBlock Text="Device Network"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextDark}"/>
                    </Border>

                    <!-- Dynamic Device List -->
                    <ItemsControl x:Name="DeviceItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="DeviceBorder"
                                        Background="{Binding BackgroundColor}"
                                        BorderBrush="{Binding BorderColor}"
                                        BorderThickness="3"
                                        CornerRadius="8"
                                        Padding="15"
                                        Margin="0,0,15,15"
                                        Width="180"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="DeviceCard_Click">
                                    <StackPanel>
                                        <controls:BrayValveControl Position="{Binding Position}"
                                                                  DeviceAddress="{Binding SlaveId}"
                                                                  DeviceType="{Binding ProductType}"
                                                                  StatusColor="{Binding StatusColor}"
                                                                  IsBlinking="{Binding IsMoving}"
                                                                  HorizontalAlignment="Center"
                                                                  Margin="0,0,0,10"/>
                                        <TextBlock Text="{Binding DeviceName}"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{StaticResource TextDark}"
                                                   Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding AddressText}"
                                                   FontSize="12"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{StaticResource TextGray}"
                                                   Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding PositionText}"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{Binding StatusTextColor}"/>
                                        <TextBlock Text="{Binding StatusText}"
                                                   FontSize="11"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{StaticResource TextGray}"
                                                   Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- No devices message -->
                    <TextBlock x:Name="NoDevicesText"
                               Text="No devices connected. Go to Connection page to create simulated devices or connect to hardware."
                               FontSize="14"
                               Foreground="{StaticResource TextGray}"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,20"
                               Visibility="Collapsed"/>

                    <!-- Network Info -->
                    <Border Background="{StaticResource BackgroundGray}"
                            CornerRadius="6"
                            Padding="15"
                            Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock FontSize="13" Margin="0,0,0,5">
                                <Run Text="Mode:" FontWeight="SemiBold" Foreground="{StaticResource TextDark}"/>
                                <Run x:Name="ModeText" Text="Simulation" Foreground="#555555"/>
                            </TextBlock>
                            <TextBlock FontSize="13" Margin="0,0,0,5">
                                <Run Text="Connected Devices:" FontWeight="SemiBold" Foreground="{StaticResource TextDark}"/>
                                <Run x:Name="DeviceCountText" Text="0" Foreground="{StaticResource SuccessGreen}" FontWeight="SemiBold"/>
                            </TextBlock>
                            <TextBlock x:Name="ConnectionInfoText"
                                       FontSize="13"
                                       Foreground="#555555"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
