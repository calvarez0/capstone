<Page x:Class="WPF_GUI.NewFolder.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WPF_GUI.NewFolder"
      mc:Ignorable="d"
      d:DesignHeight="1200" d:DesignWidth="1100"
      Title="Configuration">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Page Header -->
            <TextBlock Text="Configuration &amp; Calibration"
                       Style="{StaticResource PageTitle}"/>
            <TextBlock Text="Configure actuator parameters, register flags, relays, and calibration settings"
                       Style="{StaticResource PageDescription}"/>

            <!-- Device Selector and Mode -->
            <Border Style="{StaticResource Card}" Margin="10,0,10,10" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Selected Device:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,15,0"/>
                    <ComboBox x:Name="DeviceComboBox" Grid.Column="1" Style="{StaticResource ModernComboBox}" SelectionChanged="DeviceComboBox_SelectionChanged"/>
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="15,0,0,0">
                        <TextBlock Text="Setup Mode:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Border x:Name="SetupModeBadge" Background="#95a5a6" CornerRadius="4" Padding="8,4">
                            <TextBlock x:Name="SetupModeText" Text="INACTIVE" FontWeight="Bold" Foreground="White" FontSize="12"/>
                        </Border>
                    </StackPanel>
                    <TextBlock x:Name="ProductTypeText" Grid.Column="3" Text="" VerticalAlignment="Center" HorizontalAlignment="Right" FontStyle="Italic" Foreground="{StaticResource TextGray}"/>
                    <Button x:Name="ToggleSetupModeButton" Grid.Column="4" Content="Enter Setup Mode" Style="{StaticResource SecondaryButton}" Margin="15,0,0,0" MinWidth="130"/>
                </Grid>
            </Border>

            <!-- Configuration Grid -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Register 11 Flags Card -->
                <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource Card}">
                    <StackPanel>
                        <Border BorderBrush="{StaticResource PrimaryRed}" BorderThickness="0,0,0,2" Padding="0,0,0,8" Margin="0,0,0,15">
                            <TextBlock Text="Register 11 Flags" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <CheckBox x:Name="EhoTypeCheckBox" Grid.Column="0" Grid.Row="0" Content="EHO Type: Spring Return" Margin="0,5"/>
                            <CheckBox x:Name="LocalInputMomentaryCheckBox" Grid.Column="1" Grid.Row="0" Content="Local Input: Momentary" Margin="0,5"/>
                            <CheckBox x:Name="RemoteInputMomentaryCheckBox" Grid.Column="0" Grid.Row="1" Content="Remote Input: Momentary" Margin="0,5"/>
                            <CheckBox x:Name="RemoteEsdEnabledCheckBox" Grid.Column="1" Grid.Row="1" Content="Remote ESD Enabled" Margin="0,5"/>
                            <CheckBox x:Name="LossCommEnabledCheckBox" Grid.Column="0" Grid.Row="2" Content="Loss Comm Action Enabled" Margin="0,5"/>
                            <CheckBox x:Name="Ai1PolarityCheckBox" Grid.Column="1" Grid.Row="2" Content="AI1 Polarity: Reversed" Margin="0,5"/>
                            <CheckBox x:Name="Ai2PolarityCheckBox" Grid.Column="0" Grid.Row="3" Content="AI2 Polarity: Reversed" Margin="0,5"/>
                            <CheckBox x:Name="Ao1PolarityCheckBox" Grid.Column="1" Grid.Row="3" Content="AO1 Polarity: Reversed" Margin="0,5"/>
                            <CheckBox x:Name="Ao2PolarityCheckBox" Grid.Column="0" Grid.Row="4" Content="AO2 Polarity: Reversed" Margin="0,5"/>
                            <CheckBox x:Name="Di1TriggerCheckBox" Grid.Column="1" Grid.Row="4" Content="DI1 Open: Normally Closed" Margin="0,5"/>
                            <CheckBox x:Name="Di2TriggerCheckBox" Grid.Column="0" Grid.Row="5" Content="DI2 Close: Normally Closed" Margin="0,5"/>
                            <CheckBox x:Name="Di3TriggerCheckBox" Grid.Column="1" Grid.Row="5" Content="DI3 Stop: Normally Closed" Margin="0,5"/>
                            <CheckBox x:Name="Di4TriggerCheckBox" Grid.Column="0" Grid.Row="6" Content="DI4 ESD: Normally Closed" Margin="0,5"/>
                            <CheckBox x:Name="Di5TriggerCheckBox" Grid.Column="1" Grid.Row="6" Content="DI5 PST: Normally Closed" Margin="0,5"/>
                            <CheckBox x:Name="CloseDirectionCheckBox" Grid.Column="0" Grid.Row="7" Content="Close Direction: CCW" Margin="0,5"/>
                            <CheckBox x:Name="SeatModeCheckBox" Grid.Column="1" Grid.Row="7" Content="Seat Mode: Torque" Margin="0,5"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Register 12 Flags Card -->
                <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource Card}">
                    <StackPanel>
                        <Border BorderBrush="{StaticResource PrimaryRed}" BorderThickness="0,0,0,2" Padding="0,0,0,8" Margin="0,0,0,15">
                            <TextBlock Text="Register 12 Flags" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <CheckBox x:Name="TorqueBackseatCheckBox" Grid.Column="0" Grid.Row="0" Content="Torque Backseat" Margin="0,5"/>
                            <CheckBox x:Name="TorqueRetryCheckBox" Grid.Column="1" Grid.Row="0" Content="Torque Retry" Margin="0,5"/>
                            <CheckBox x:Name="RemoteDisplayCheckBox" Grid.Column="0" Grid.Row="1" Content="Remote Display" Margin="0,5"/>
                            <CheckBox x:Name="LedsCheckBox" Grid.Column="1" Grid.Row="1" Content="LEDs Enabled" Margin="0,5"/>
                            <CheckBox x:Name="OpenInhibitCheckBox" Grid.Column="0" Grid.Row="2" Content="Open Inhibit" Margin="0,5"/>
                            <CheckBox x:Name="CloseInhibitCheckBox" Grid.Column="1" Grid.Row="2" Content="Close Inhibit" Margin="0,5"/>
                            <CheckBox x:Name="LocalEsdCheckBox" Grid.Column="0" Grid.Row="3" Content="Local ESD" Margin="0,5"/>
                            <CheckBox x:Name="EsdOrThermalCheckBox" Grid.Column="1" Grid.Row="3" Content="ESD or Thermal" Margin="0,5"/>
                            <CheckBox x:Name="EsdOrLocalCheckBox" Grid.Column="0" Grid.Row="4" Content="ESD or Local" Margin="0,5"/>
                            <CheckBox x:Name="EsdOrStopCheckBox" Grid.Column="1" Grid.Row="4" Content="ESD or Stop" Margin="0,5"/>
                            <CheckBox x:Name="EsdOrInhibitCheckBox" Grid.Column="0" Grid.Row="5" Content="ESD or Inhibit" Margin="0,5"/>
                            <CheckBox x:Name="EsdOrTorqueCheckBox" Grid.Column="1" Grid.Row="5" Content="ESD or Torque" Margin="0,5"/>
                            <CheckBox x:Name="CloseSpeedControlCheckBox" Grid.Column="0" Grid.Row="6" Content="Close Speed Control" Margin="0,5"/>
                            <CheckBox x:Name="OpenSpeedControlCheckBox" Grid.Column="1" Grid.Row="6" Content="Open Speed Control" Margin="0,5"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Control Configuration Card (Reg 101-102) -->
                <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource Card}">
                    <StackPanel>
                        <Border BorderBrush="{StaticResource PrimaryRed}" BorderThickness="0,0,0,2" Padding="0,0,0,8" Margin="0,0,0,15">
                            <TextBlock Text="Control Configuration (Reg 101-102)" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Control Mode" Style="{StaticResource FormLabel}"/>
                            <ComboBox x:Name="ControlModeComboBox" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="Two-Wire Discrete" Tag="0"/>
                                <ComboBoxItem Content="Three-Wire Discrete" Tag="1"/>
                                <ComboBoxItem Content="Four-Wire Discrete" Tag="2"/>
                                <ComboBoxItem Content="Analog 4-20mA" Tag="3"/>
                                <ComboBoxItem Content="Analog 0-10V" Tag="4"/>
                                <ComboBoxItem Content="Analog 2-10V" Tag="5"/>
                                <ComboBoxItem Content="Analog 0-5V" Tag="6"/>
                                <ComboBoxItem Content="Analog 1-5V" Tag="7"/>
                                <ComboBoxItem Content="Network" Tag="8"/>
                            </ComboBox>
                        </StackPanel>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="Modulation Delay" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="ModulationDelayTextBox" Text="1" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                <TextBlock Text="Deadband" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="DeadbandTextBox" Text="20" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel>
                            <TextBlock Text="Network Adapter" Style="{StaticResource FormLabel}"/>
                            <ComboBox x:Name="NetworkAdapterComboBox" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="None" Tag="0"/>
                                <ComboBoxItem Content="Modbus BUS" Tag="1"/>
                                <ComboBoxItem Content="Modbus Repeater" Tag="2"/>
                                <ComboBoxItem Content="Modbus TCP" Tag="3"/>
                                <ComboBoxItem Content="DeviceNet" Tag="4"/>
                                <ComboBoxItem Content="Ethernet/IP" Tag="5"/>
                                <ComboBoxItem Content="Profibus" Tag="6"/>
                                <ComboBoxItem Content="ProfiNet" Tag="7"/>
                                <ComboBoxItem Content="HART" Tag="8"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Additional Functions Card (Reg 107-110) -->
                <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource Card}">
                    <StackPanel>
                        <Border BorderBrush="{StaticResource PrimaryRed}" BorderThickness="0,0,0,2" Padding="0,0,0,8" Margin="0,0,0,15">
                            <TextBlock Text="Additional Functions (Reg 107-110)" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="Failsafe Action" Style="{StaticResource FormLabel}"/>
                                <ComboBox x:Name="FailsafeActionComboBox" Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="Stay Put" Tag="0"/>
                                    <ComboBoxItem Content="Go Open" Tag="1"/>
                                    <ComboBoxItem Content="Go Close" Tag="2"/>
                                    <ComboBoxItem Content="Go To Position" Tag="3"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                <TextBlock Text="Failsafe Position (%)" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="FailsafePositionTextBox" Text="50" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="ESD Action" Style="{StaticResource FormLabel}"/>
                                <ComboBox x:Name="EsdActionComboBox" Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="Stay Put" Tag="0"/>
                                    <ComboBoxItem Content="Go Open" Tag="1"/>
                                    <ComboBoxItem Content="Go Close" Tag="2"/>
                                    <ComboBoxItem Content="Go To Position" Tag="3"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                <TextBlock Text="ESD Delay (s)" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="EsdDelayTextBox" Text="0" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="Loss Comm Action" Style="{StaticResource FormLabel}"/>
                                <ComboBox x:Name="LossCommActionComboBox" Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="Stay Put" Tag="0"/>
                                    <ComboBoxItem Content="Go Open" Tag="1"/>
                                    <ComboBoxItem Content="Go Close" Tag="2"/>
                                    <ComboBoxItem Content="Go To Position" Tag="3"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                <TextBlock Text="Loss Comm Delay (s)" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="LossCommDelayTextBox" Text="0" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Network Settings Card (Reg 110-111) -->
                <Border Grid.Column="0" Grid.Row="2" Style="{StaticResource Card}">
                    <StackPanel>
                        <Border BorderBrush="{StaticResource PrimaryRed}" BorderThickness="0,0,0,2" Padding="0,0,0,8" Margin="0,0,0,15">
                            <TextBlock Text="Network Settings (Reg 110-111)" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Network Baud Rate" Style="{StaticResource FormLabel}"/>
                            <ComboBox x:Name="NetworkBaudRateComboBox" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="1200" Tag="0"/>
                                <ComboBoxItem Content="2400" Tag="1"/>
                                <ComboBoxItem Content="4800" Tag="2"/>
                                <ComboBoxItem Content="9600" Tag="3"/>
                                <ComboBoxItem Content="19200" Tag="4"/>
                                <ComboBoxItem Content="38400" Tag="5"/>
                            </ComboBox>
                        </StackPanel>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="Response Delay (ms)" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="ResponseDelayTextBox" Text="8" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                <TextBlock Text="Comm Parity" Style="{StaticResource FormLabel}"/>
                                <ComboBox x:Name="CommParityComboBox" Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="None" Tag="0"/>
                                    <ComboBoxItem Content="Odd" Tag="1"/>
                                    <ComboBoxItem Content="Even" Tag="2"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="LSA Position (%)" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="LsaTextBox" Text="25" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                <TextBlock Text="LSB Position (%)" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="LsbTextBox" Text="75" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Speed Control Card (Reg 114-115) -->
                <Border Grid.Column="1" Grid.Row="2" Style="{StaticResource Card}">
                    <StackPanel>
                        <Border BorderBrush="{StaticResource PrimaryRed}" BorderThickness="0,0,0,2" Padding="0,0,0,8" Margin="0,0,0,15">
                            <TextBlock Text="Speed Control (Reg 114-115)" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <TextBlock Text="Open Speed Control" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="Start Position (%)" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="OpenSpeedStartTextBox" Text="70" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                <TextBlock Text="Speed Ratio (%)" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="OpenSpeedRatioTextBox" Text="50" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Close Speed Control" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="Start Position (%)" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="CloseSpeedStartTextBox" Text="30" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                <TextBlock Text="Speed Ratio (%)" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="CloseSpeedRatioTextBox" Text="50" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Values must be 5-95, multiples of 5" Style="{StaticResource HelpText}" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Calibration Card (Reg 500-507) -->
                <Border Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Style="{StaticResource Card}">
                    <StackPanel>
                        <Border BorderBrush="{StaticResource PrimaryRed}" BorderThickness="0,0,0,2" Padding="0,0,0,8" Margin="0,0,0,15">
                            <TextBlock Text="Analog Calibration (Reg 500-507) - Values: 0-4095" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="AI1 Zero (Reg 500)" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="AI1ZeroTextBox" Text="0" Style="{StaticResource ModernTextBox}"/>
                                <TextBlock Text="AI1 Span (Reg 501)" Style="{StaticResource FormLabel}" Margin="0,10,0,0"/>
                                <TextBox x:Name="AI1SpanTextBox" Text="4095" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,10,0">
                                <TextBlock Text="AI2 Zero (Reg 502)" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="AI2ZeroTextBox" Text="0" Style="{StaticResource ModernTextBox}"/>
                                <TextBlock Text="AI2 Span (Reg 503)" Style="{StaticResource FormLabel}" Margin="0,10,0,0"/>
                                <TextBox x:Name="AI2SpanTextBox" Text="4095" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="10,0,10,0">
                                <TextBlock Text="AO1 Zero (Reg 504)" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="AO1ZeroTextBox" Text="0" Style="{StaticResource ModernTextBox}"/>
                                <TextBlock Text="AO1 Span (Reg 505)" Style="{StaticResource FormLabel}" Margin="0,10,0,0"/>
                                <TextBox x:Name="AO1SpanTextBox" Text="4095" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" Margin="10,0,0,0">
                                <TextBlock Text="AO2 Zero (Reg 506)" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="AO2ZeroTextBox" Text="0" Style="{StaticResource ModernTextBox}"/>
                                <TextBlock Text="AO2 Span (Reg 507)" Style="{StaticResource FormLabel}" Margin="0,10,0,0"/>
                                <TextBox x:Name="AO2SpanTextBox" Text="4095" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Configuration Management Card -->
                <Border Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" Style="{StaticResource Card}">
                    <StackPanel>
                        <Border BorderBrush="{StaticResource PrimaryRed}" BorderThickness="0,0,0,2" Padding="0,0,0,8" Margin="0,0,0,15">
                            <TextBlock Text="Configuration Management" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="ReadFromDeviceButton" Grid.Column="0" Content="Read from Device" Style="{StaticResource InfoButton}" Margin="0,0,5,0"/>
                            <Button x:Name="WriteToDeviceButton" Grid.Column="1" Content="Write to Device" Style="{StaticResource PrimaryButton}" Margin="5,0,5,0"/>
                            <Button x:Name="WriteCalibrationButton" Grid.Column="2" Content="Write Calibration" Style="{StaticResource SecondaryButton}" Margin="5,0,5,0"/>
                            <Button x:Name="SaveToFileButton" Grid.Column="3" Content="Save to File" Style="{StaticResource InfoButton}" Margin="5,0,5,0"/>
                            <Button x:Name="LoadFromFileButton" Grid.Column="4" Content="Load from File" Style="{StaticResource InfoButton}" Margin="5,0,0,0"/>
                        </Grid>

                        <!-- Status Message -->
                        <Border x:Name="StatusBorder" Visibility="Collapsed" Background="#d4edda" BorderBrush="{StaticResource SuccessGreen}" BorderThickness="4,0,0,0" CornerRadius="6" Padding="15" Margin="0,15,0,0">
                            <TextBlock x:Name="StatusText" Text="" FontSize="13" Foreground="#155724"/>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
